<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="@dimen/hwbottomnav_item_port_minheight">

    <ImageView
        android:id="@+id/topIcon"
        android:layout_width="@dimen/hwbottomnav_item_icon_size"
        android:layout_height="@dimen/hwbottomnav_item_icon_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/hwbottomnav_item_top_margin" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/startIcon"
            android:layout_width="@dimen/hwbottomnav_item_icon_size"
            android:layout_height="@dimen/hwbottomnav_item_icon_size"
            android:layout_marginEnd="@dimen/hwbottomnav_item_start_magin"
            android:visibility="gone"
            tools:ignore="RtlCompat" />

        <com.huawei.bottomnavigationview.HwTextView
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="HwChinese-medium"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="@color/emui_color_gray_7" />
    </LinearLayout>
</merge>